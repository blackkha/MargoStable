# MargoBot Environment Variables - Example File
# Copy this file to .env and fill in your values

# Flask Application
SESSION_SECRET=your_secure_session_key_here
FLASK_ENV=production
PORT=5000

# Database Configuration 
# On Replit, this is automatically set when you create a PostgreSQL database
DATABASE_URL=postgresql://username:password@hostname:port/database_name?sslmode=require

# Telegram Bot Configuration
TELEGRAM_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ

# CoinGecko API
CG_API_KEY=your_coingecko_api_key_here

# Scheduling Configuration
DAILY_REPORT_HOUR=10
DAILY_REPORT_TIMEZONE=UTC

# Application Settings
DEBUG=False
LOG_LEVEL=INFO

# Optional: Backup DB URL (if using multiple environments)
# BACKUP_DATABASE_URL=sqlite:///crypto_data.db